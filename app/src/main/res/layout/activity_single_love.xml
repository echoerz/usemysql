<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:layout_centerInParent="true">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/others_touxiang"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/touxiang"
        android:layout_above="@+id/love_single_context"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:background="@drawable/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/love_single_picture"
        android:layout_alignParentLeft="true"
        android:paddingBottom="2dip"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:paddingTop="2dip"
        android:id="@+id/love_single_title"/>

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/love_single_context"
        android:layout_alignParentLeft="true"
        android:id="@+id/love_single_picture"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_above="@+id/love_single_context"
        android:layout_toRightOf="@+id/others_touxiang"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/love_single_username"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/love_single_context"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/love_single_picture"
        android:layout_alignParentRight="true"
        android:textSize="14sp"
        android:layout_marginTop="15dp"
        android:id="@+id/love_single_zan"/>

</RelativeLayout>