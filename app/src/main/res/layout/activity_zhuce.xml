<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="#7adfb8">

        <include
            android:id="@+id/zc_input_layout"
            layout="@layout/zc_input_layout"
            android:layout_width="match_parent"
            android:layout_height="280dip"
            android:layout_marginLeft="40dip"
            android:layout_marginRight="40dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/zc_progress"
            android:layout_marginTop="100dp" />

        <include
            android:id="@+id/zc_progress"
            layout="@layout/layout_progress"
            android:layout_width="match_parent"
            android:layout_height="130dip"
            android:visibility="gone" />

        <TextView
            android:id="@+id/zhuce_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/zc_input_layout"
            android:layout_centerHorizontal="true"
            android:background="@drawable/text_bg"
            android:gravity="center"
            android:paddingBottom="2dip"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingTop="2dip"
            android:text="立即注册"
            android:textColor="#ffffff"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/cheakchong"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#ff0000"
            android:textColorHighlight="#7adfb8"
            android:layout_above="@+id/zhuce_btn"/>
</RelativeLayout>



